
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reconciliation </title>
    <link rel='shortcut icon' href='~/favicon.ico' type='image/x-icon' />
    @Styles.Render("~/Content/css")
    <base href="/" />
    <meta name="runningPath" content="@ViewBag.Version">
</head>
<body>
    <div id="main">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="~/">Flights</a>
                </div>
            </div>

        </nav>
        <div class="content container">
            <div class="col-md-12" id="container-main">
                <div ng-view ng-cloak></div>
                <div class="row" ng-controller="FlightSearchController">
                    <div class="col-md-6">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                Search Flights
                            </div>
                            <div class="panel-body">
                                
                                <form class="form-inline">
                                    <div class="form-group">
                                        <label for="from">From:</label>
                                        <input type="text" class="form-control" id="from">
                                    </div>
                                    <div class="form-group">
                                        <label for="to">To:</label>
                                        <input type="text" class="form-control" id="to">
                                    </div>
                                    <div class="">
                                        <button id="search" type="submit" class="btn btn-info">Submit</button>
                                    </div>
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <hr />
                <div ng-controller="GridController">
                        <div class="row">
                            <div class="col-md-12">
                                <div id="flightsGrid"
                                     ui-grid-selection
                                     ui-grid-resize-columns
                                     class="grid-content"
                                     ui-grid="gridOptions">
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/other")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/application")
</body>
</html>